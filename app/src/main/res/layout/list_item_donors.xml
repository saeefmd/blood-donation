<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/login_box_shape">

    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/mobile_layout"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/donor_name_tv"
            style="@style/result_text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saeef MD Zulker Naeen"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/donor_department_tv"
            style="@style/result_text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="CSE" />

        <TextView
            android:id="@+id/donor_location_tv"
            style="@style/result_text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Savar" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mobile_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/donor_mobile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01987783281"
            style="@style/result_text_type"
            android:textStyle="bold"
            android:layout_margin="2dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/call_bt"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:text="Call"
                android:textAllCaps="false"
                android:layout_margin="2dp"
                android:background="@color/upperColor"
                android:textColor="#FFFFFF"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/message_bt"
                android:layout_width="65dp"
                android:layout_height="35dp"
                android:text="Message"
                android:textAllCaps="false"
                android:layout_margin="2dp"
                android:background="@color/upperColor"
                android:textColor="#FFFFFF"
                android:textSize="10sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
