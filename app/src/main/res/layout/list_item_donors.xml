<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/donor_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saeef MD Zulker Naeen"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/donor_department_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="CSE"
            android:textColor="#000000"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/donor_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Savar"
            android:textColor="#000000"
            android:textSize="10sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/donor_mobile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01987783281"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/call_bt"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="Call"
                android:textAllCaps="false"
                android:layout_margin="2dp"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/message_bt"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="Message"
                android:textAllCaps="false"
                android:layout_margin="2dp"
                android:textSize="10sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
