<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="user_info_guide_text">
        <item name="android:textSize">@dimen/user_info_guide_text</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="sign_up_text">
        <item name="android:textColor">@color/quote_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="info_box_style">
        <item name="android:textSize">@dimen/user_info_text</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="result_text_type">
        <item name="android:textColor">@color/quote_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="spinner_style">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:popupBackground">#FFFFFF</item>
    </style>

    <style name="developer_info_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

</resources>
